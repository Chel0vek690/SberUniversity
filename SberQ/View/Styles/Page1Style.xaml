<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Main">
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center" />
        <Setter Property="StackPanel.VerticalAlignment" Value="Center" />
        <Setter Property="StackPanel.Width" Value="795" />
        <Setter Property="StackPanel.Height" Value="1128" />
    </Style>
    
    <Style x:Key="Main1">
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center" />
        <Setter Property="StackPanel.VerticalAlignment" Value="Center"/>
        <Setter Property="StackPanel.IsHitTestVisible" Value="False"/>
    </Style>

    <Style x:Key="SberQSubject">
        <Setter Property="TextBlock.FontWeight" Value="SemiBold"/>
        <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/SberQ;component/Assets/Fonts/#SB Sans Display"/>
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.FontSize" Value="72"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="SberQIs">
        <Setter Property="TextBlock.FontWeight" Value="Regular"/>
        <Setter Property="TextBlock.Margin" Value="0 63 0 0"/>
        <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/SberQ;component/Assets/Fonts/#SB Sans Text"/>
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.FontSize" Value="36"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
    </Style>

    <Style x:Key="Main2">
        <Setter Property="StackPanel.Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0,0,655,263" RadiusX="36" RadiusY="36"/>
            </Setter.Value>
        </Setter>
        <Setter Property="StackPanel.Orientation" Value="Horizontal" />
        <Setter Property="StackPanel.Margin" Value="0 95 0 0"/>
        <Setter Property="StackPanel.Background" Value="#33FFFFFF"/>
        <Setter Property="StackPanel.Height" Value="263"/>
        <Setter Property="StackPanel.Width" Value="655"/>
    </Style>

    <Style x:Key="Main3">
        <Setter Property="StackPanel.Orientation" Value="Horizontal"/>
        <Setter Property="StackPanel.Width" Value="607" />
        <Setter Property="StackPanel.Height" Value="215" />
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center"/>
        <Setter Property="StackPanel.VerticalAlignment" Value="Center"/>
        <Setter Property="StackPanel.Margin" Value="24" />
    </Style>

    <Style x:Key="QR_Code">
        <Setter Property="Image.Source" Value="pack://application:,,,/SberQ;component/Assets/Images/qr1.png"/>
        <Setter Property="Image.Width" Value="215"/>
        <Setter Property="Image.Height" Value="215"/>
        <Setter Property="Image.HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="TextQR">
        <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/SberQ;component/Assets/Fonts/#SB Sans Display"/>
        <Setter Property="TextBlock.Margin" Value="36 0 0 0" />
        <Setter Property="TextBlock.TextAlignment" Value="Left" />
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.FontSize" Value="32"/>
        <Setter Property="TextBlock.Width" Value="356"/>
        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
        <Setter Property="TextBlock.Height" Value="114" />
    </Style>

    
</ResourceDictionary>