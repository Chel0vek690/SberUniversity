<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Main">
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center" />
        <Setter Property="StackPanel.VerticalAlignment" Value="Center" />
        <Setter Property="StackPanel.Width" Value="795" />
        <Setter Property="StackPanel.Height" Value="1128" />
    </Style>

    <Style x:Key="Main1">
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center" />
        <Setter Property="StackPanel.VerticalAlignment" Value="Center"/>
        <Setter Property="StackPanel.IsHitTestVisible" Value="False"/>
    </Style>

    <Style x:Key="Main2">
        <Setter Property="StackPanel.Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0,0,655,263" RadiusX="36" RadiusY="36"/>
            </Setter.Value>
        </Setter>
        <Setter Property="StackPanel.Orientation" Value="Horizontal" />
        <Setter Property="StackPanel.Margin" Value="0 95 0 0"/>
        <Setter Property="StackPanel.Background" Value="#33FFFFFF"/>
        <Setter Property="StackPanel.Height" Value="263"/>
        <Setter Property="StackPanel.Width" Value="655"/>
    </Style>

    <Style x:Key="Main3">
        <Setter Property="StackPanel.Orientation" Value="Horizontal"/>
        <Setter Property="StackPanel.Width" Value="607" />
        <Setter Property="StackPanel.Height" Value="215" />
        <Setter Property="StackPanel.HorizontalAlignment" Value="Center"/>
        <Setter Property="StackPanel.VerticalAlignment" Value="Center"/>
        <Setter Property="StackPanel.Margin" Value="24" />
    </Style>

    <Style x:Key="QR_Code">
        <Setter Property="Image.Source" Value="pack://application:,,,/SberQ;component/Assets/Images/qr1.png"/>
        <Setter Property="Image.Width" Value="215"/>
        <Setter Property="Image.Height" Value="215"/>
        <Setter Property="Image.HorizontalAlignment" Value="Center"/>
    </Style>
  
</ResourceDictionary>