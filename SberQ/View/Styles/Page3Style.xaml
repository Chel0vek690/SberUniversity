    <Style TargetType="TextBox" x:Key="inputEmail">
        <Setter Property="TextBox.Background" Value="#19FFFFFF" />
        <Setter Property="TextBox.BorderBrush" Value="White" />
        <Setter Property="TextBox.Margin" Value="0 32 0 0" />
        <Setter Property="TextBox.Height" Value="74" />
        <Setter Property="TextBox.FontSize" Value="28" />
        <Setter Property="TextBox.FontSize" Value="28" />
        <Setter Property="TextBlock.FontFamily" Value="pack://application:,,,/SberQ;component/Resources/Fonts/#SB Sans Text"/>
        <Setter Property="TextBox.TextAlignment" Value="Left" />
        <Setter Property="TextBox.VerticalContentAlignment" Value="Center" />
        <Setter Property="TextBox.Foreground" Value="#FFFFFF" />
        <Setter Property="TextBox.Padding" Value="52 22 52 22" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="20" 
                    SnapsToDevicePixels="True">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BackgroundText_CheckBox">
        <Setter Property="Label.FontSize" Value="24" />
        <Setter Property="Label.FontFamily" Value="pack://application:,,,/SberQ;component/Resources/Fonts/#SB Sans Text" />
        <Setter Property="Label.FontWeight" Value="Regular" />
        <Setter Property="Label.Foreground" Value="White" />
    </Style>

    <Style x:Key="checkbox_text">
        <Setter Property="TextBlock.Foreground" Value="#FFFFFF" />
        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
        <Setter Property="TextBlock.Margin" Value="16 0 0 0" />
         <Setter Property="TextBlock.Width" Value="748" />
    </Style>

    <Style x:Key="checkbox">
        <Setter Property="CheckBox.Margin" Value="0 16 0 0" />
        <Setter Property="CheckBox.Width" Value="796" />
        <Setter Property="CheckBox.IsChecked" Value="False" />
        <Setter Property="CheckBox.IsThreeState" Value="False" />
        <Setter Property="CheckBox.FontFamily" Value="pack://application:,,,/SberQ;component/Resources/Fonts/#SB Sans Text"/>
        <Setter Property="CheckBox.FontSize" Value="20" />
        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
        <Setter Property="CheckBox.Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                        <Border x:Name="Border" Width="32" Height="32" BorderThickness="0" Background="White" CornerRadius="4" />
                        <Path x:Name="CheckMark" Visibility="Collapsed" Stroke="#18AA7B" StrokeThickness="2" 
                          Data="M4 10L7.64645 13.6464C7.84171 13.8417 8.15829 13.8417 8.35355 13.6464L16 6" Margin="-26,13,0,0" />
                        <ContentPresenter Margin="5,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Background_Popap">
        <Setter Property="StackPanel.Width" Value="1080" />
        <Setter Property="StackPanel.Height" Value="1920" />
